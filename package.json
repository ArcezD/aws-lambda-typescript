{
  "name": "lambda-typescript",
  "version": "1.0.0",
  "description": "A sample to create AWS Lambda functions in TypeScript with Serverless.",
  "main": "handler.js",
  "scripts": {
    "analyse": "npm run lint && npm run test",
    "clean": "rimraf .build .serverless .nyc_output coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "npm run clean && npm run analyse",
    "build": "serverless package",
    "predeploy": "npm run clean && npm run analyse",
    "deploy": "serverless deploy",
    "lint": "tslint --project . --format verbose",
    "start": "serverless offline start",
    "pretest": "npm run clean",
    "test": "nyc mocha"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "tslint",
    "typescript"
  ],
  "author": "György Balássy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/balassy/aws-lambda-typescript.git"
  },
  "devDependencies": {
    "@types/aws-lambda": "0.0.16",
    "@types/chai": "4.0.4",
    "@types/chance": "0.7.35",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.28",
    "aws-sdk": "2.118.0",
    "chai": "4.1.2",
    "chance": "1.0.11",
    "coveralls": "2.13.1",
    "mocha": "3.5.2",
    "nyc": "11.2.1",
    "rimraf": "2.6.2",
    "serverless-aws-documentation": "0.8.0",
    "serverless-offline": "3.15.3",
    "serverless-plugin-typescript": "1.1.2",
    "source-map-support": "0.4.18",
    "ts-mockito": "2.1.1",
    "ts-node": "3.3.0",
    "tslint": "5.7.0"
  }
}
