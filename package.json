{
  "name": "lambda-typescript",
  "version": "1.0.0",
  "description": "A sample to create AWS Lambda functions in TypeScript with Serverless.",
  "main": "handler.js",
  "scripts": {
    "analyse": "npm run lint && npm run test",
    "predeploy": "npm run analyse",
    "deploy": "serverless deploy",
    "lint": "tslint --project . --format verbose",
    "prepack": "npm run analyse",
    "pack": "serverless package",
    "start": "serverless offline start",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "keywords": [
    "aws",
    "lambda",
    "serverless",
    "tslint",
    "typescript"
  ],
  "author": "György Balássy",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "0.0.16",
    "@types/chai": "4.0.4",
    "@types/chance": "0.7.35",
    "@types/mocha": "2.2.42",
    "@types/node": "8.0.26",
    "chai": "4.1.2",
    "chance": "1.0.11",
    "mocha": "3.5.0",
    "serverless-offline": "3.15.3",
    "serverless-plugin-typescript": "1.1.2",
    "ts-node": "3.3.0",
    "tslint": "5.7.0"
  }
}
